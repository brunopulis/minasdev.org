.newsletter{
    background-color #e84230
    form{
        display block
        padding 0
        margin 0
        padding 40px 0 40px 55px
    }
    label{
        font-family "PN-Black"
        font-size 35px
        text-transform uppercase
        color #fff
        margin-right 70px
    }
    input[type="text"]{
        font-family "PN-SemiBold"
        font-size 14px
        background-color transparent
        border 1px solid #fff
        border-radius 5px
        padding 15px
        width 550px
        margin 0
        color #fff
        margin-right 15px
        outline none
        &::-webkit-input-placeholder {
            font-family "PN-SemiBold"
            color #fff
            font-size 14px
        }

        &:-moz-placeholder {
            font-family "PN-SemiBold"
            color #fff
            font-size 14px
        }

        &::-moz-placeholder {
            font-family "PN-SemiBold"
            color #fff
            font-size 14px
        }

        &:-ms-input-placeholder {
            font-family "PN-SemiBold"
            color #fff
            font-size 14px
        }
    }
    button[type="submit"]{
        font-family "PN-Bold"
        font-size 14px
        border 1px solid #fff
        color #e84230
        text-transform uppercase
        background-color #fff
        padding 0
        margin 0
        outline none
        cursor pointer
        padding 15px 45px
        border-radius 5px

    }
}